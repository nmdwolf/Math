		\foreach \y in {0.15,...,\result}
			\draw[xshift=\y cm,thick] (\y cm,0) -- +(1.4 cm,0);
	\end{tikzpicture}
}
\newcommand{\dynkB}[1]{
	\FPeval{\result}{#1 - 1}
	\begin{tikzpicture}[scale=.4]
		\foreach \x in {0,...,\result}
			\draw[xshift=\x cm,thick] (\x cm,0) circle (.3cm);
		\FPeval{\result}{#1 - 2.85}
		\ifnum#1>2
			\foreach \y in {0.15,...,\result}
				\draw[xshift=\y cm,thick] (\y cm, 0) -- +(1.4 cm,0);
		\else\fi
		\FPeval{\result}{#1 - 1.85}
		\draw[xshift=\result cm,thick] (\result cm, 0.1) -- +(1.4 cm,0);
		\draw[xshift=\result cm,thick] (\result cm, -0.1) -- +(1.4 cm,0);
		\FPeval{\result2}{\result + 0.45}
		\draw[xshift=\result2 cm,thick,rotate around={-135:(\result2,0)}] (\result2 cm, 0) -- +(0.8 cm,0);
		\draw[xshift=\result2 cm,thick,rotate around={135:(\result2,0)}] (\result2 cm, 0) -- +(0.8 cm,0);
	\end{tikzpicture}
}
